= form_for [:companies, @ad] do |f|
  .col-md-8.col-lg-9
    .form-group
      = f.label :title
      = f.text_field :title, :class => 'form-control'
    .form-group
      = f.label :body
      = f.cktext_area :body, :class => 'form-control'
  .col-md-4.col-lg-3
    .panel.panel-default
      .panel-heading Settings
      .panel-body
        .form-group
          = f.label :type
          = f.collection_select :type, Advertisement::TYPES, :itself, :titleize, {}, :class => "form-control"
        .form-group
          = f.label :domain
          = f.collection_select :domain, Advertisement::DOMAINS, :itself, :titleize, {}, :class => "form-control"
        .form-group
          = f.label :deadline
          = f.datetime_select :deadline, {}, :class => "form-control"
        .form-group
          = f.label :visible
          = f.check_box :visible
      .panel-footer
        .text-right
          = f.submit :class => 'btn btn-primary'
