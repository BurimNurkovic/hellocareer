.row
  .col-lg-12
    %h3.page-header Edit Team Member

.row
  = form_for [:admin, @team_member] do |f|
    .col-md-8.col-lg-9
      .form-group
        = f.label :name
        = f.text_field :name, :class => "form-control"
      .form-group
        = f.label :description
        = f.text_field :description, :class => "form-control"
    .col-md-4.col-lg-3
      .panel.panel-default
        .panel-heading Picture
        .panel-body
          .thumbnail
            = image_tag @team_member.photo
          %span.btn.btn-default.btn-file
            %span Select file
            = f.file_field :photo

      .panel.panel-default
        .panel-heading Publish
        .panel-body
          // Updated at
        .panel-footer
          .text-right
            = f.submit :class => "btn btn-primary"
