.row
  .col-lg-12
    %h3.page-header Add Partner

.row
  = form_for [:admin, @partner] do |f|
    .col-md-8.col-lg-9
      .form-group
        = f.label :name
        = f.text_field :name, :class => "form-control"
      .form-group
        //text field for partner website link
    .col-md-4.col-lg-3
      .panel.panel-default
        .panel-heading Logo
        .panel-body
          %span.btn.btn-default.btn-file
            %span Select file
            = f.file_field :logo

      .panel.panel-default
        .panel-heading Publish
        .panel-footer
          .text-right
            = f.submit :class => "btn btn-primary"

.row
  .col-lg-12
    %h3.page-header All Content Boxes
  .col-lg-12
    .table-responsive
      %table.table.table-hover.table-striped
        %thead
          %tr
            %th ID
            %th Name
            %th Logo
            %th Actions

        %tbody
          - @partners.each do |partner|
            %tr
              %td= partner.id
              %td= partner.name
              %td= image_tag partner.logo, :width => "100"
              %td
                .btn-group
                  = link_to 'Edit', [:edit, :admin, partner], :class => "btn btn-default"
                  = link_to 'Delete', [:admin, partner], :method => :delete, :class => "btn btn-danger", data: { confirm: t(:are_you_sure) }
