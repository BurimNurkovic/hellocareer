.row
  .col-lg-12
    %h3.page-header Edit Partner

.row
  = form_for [:admin, @partner] do |f|
    .col-md-8.col-lg-9
      .form-group
        = f.label :name
        = f.text_field :name, :class => "form-control"
      .form-group
        //text field for partner website link
    .col-md-4.col-lg-3
      .panel.panel-default
        .panel-heading Logo
        .panel-body
          .thumbnail
            = image_tag @partner.logo
          %span.btn.btn-default.btn-file
            %span Select file
            = f.file_field :logo

      .panel.panel-default
        .panel-heading Publish
        .panel-body
          // Updated at
        .panel-footer
          .text-right
            = f.submit :class => "btn btn-primary"
