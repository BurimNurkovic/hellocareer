.row
  .col-lg-12
    %h3.page-header Edit Partner

.row
  = form_for [:admin, @testimonial] do |f|
    .col-md-8.col-lg-9
      .form-group
        = f.label :author
        = f.text_field :author, :class => "form-control"
      .form-group
        = f.label :text
        = f.cktext_area :text, :class => "form-control"
    .col-md-4.col-lg-3
      .panel.panel-default
        .panel-heading Picture
        .panel-body
          .thumbnail
            = image_tag @testimonial.picture
          %span.btn.btn-default.btn-file
            %span Select file
            = f.file_field :picture

      .panel.panel-default
        .panel-heading Publish
        .panel-body
          // Updated at
        .panel-footer
          .text-right
            = f.submit :class => "btn btn-primary"
