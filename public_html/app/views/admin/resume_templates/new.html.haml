

.row
  .col-xs-12
    = form_for [:admin, @resume_template] do |f|
      .form-group
        = f.label :name
        = f.text_field :name, :class => 'form-control'
      .form-group
        = f.label :description
        = f.text_area :description, :class => 'form-control'
      .form-group
        = f.label :image
        = f.file_field :image
      .form-group
        = f.label :handler
        = f.text_field :handler, :class => 'form-control'
      .form-group
        = f.label :body_for_html
        = f.text_area :body_for_html, :class => 'form-control code-text'
      .form-group
        = f.label :body_for_pdf
        = f.text_area :body_for_pdf, :class => 'form-control code-text'
      .form-group
        = f.submit :class => 'btn btn-primary'
