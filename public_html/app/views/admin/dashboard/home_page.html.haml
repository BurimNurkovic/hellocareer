.row
  .col-lg-12
    %h3.page-header Dashboard

.row
  .col-lg-3.col-md-6
    .panel.panel-primary
      .panel-heading
        .row
          .col-xs-3
            %i.fa.fa-user.fa-5x
          .col-xs-9.text-right
            .huge
              = User.count
            %span Users

  .col-lg-3.col-md-6
    .panel.panel-yellow
      .panel-heading
        .row
          .col-xs-3
            %i.fa.fa-file-pdf-o.fa-5x
          .col-xs-9.text-right
            .huge
              = Resume.count
            %span Resumes

  .col-lg-3.col-md-6
    .panel.panel-green
      .panel-heading
        .row
          .col-xs-3
            %i.fa.fa-bank.fa-5x
          .col-xs-9.text-right
            .huge
              = Company.count
            %span Companies

.row
  .col-lg-12
    %h3.page-header Google Analytics
    = render 'google_analytics'
