.row
  .col-lg-12
    %h3.page-header Edit Benefit

.row
  = form_for [:admin, @benefit] do |f|
    .col-md-8.col-lg-9
      .form-group
        = f.label :title
        = f.text_field :title, :class => "form-control"
      .form-group
        = f.label :body
        = f.text_area :body, :class => "form-control"
    .col-md-4.col-lg-3
      .panel.panel-default
        .panel-heading Publish
        .panel-body
          // Updated at
        .panel-footer
          .text-right
            = f.submit :class => "btn btn-primary"
