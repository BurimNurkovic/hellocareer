.row
  .col-lg-12
    %h3.page-header Add Content Box

.row
  = form_for [:admin, @box] do |f|

    .col-md-8.col-lg-9
      .form-group
        = f.label :title
        = f.text_field :title, :class => "form-control"
      .form-group
        = f.label :body
        = f.cktext_area :body, :class => "form-control"
    .col-md-4.col-lg-3
      .panel.panel-default
        .panel-heading Image
        .panel-body
          %span.btn.btn-default.btn-file
            %span Select file
            = f.file_field :image

      .panel.panel-default
        .panel-heading Publish
        .panel-body
          .form-group
            = f.label :key
            = f.text_field :key, :class => "form-control"
        .panel-footer
          .text-right
            = f.submit :class => "btn btn-primary"

.row
  .col-lg-12
    %h3.page-header All Content Boxes
  .col-lg-12
    .table-responsive
      %table.table.table-hover.table-striped
        %thead
          %tr
            %th ID
            %th Key
            %th Title
            %th Actions

        %tbody
          - @boxes.each do |box|
            %tr
              %td= box.id
              %td= box.key
              %td= box.title
              %td
                .btn-group
                  = link_to 'Edit', [:edit, :admin, box], :class => "btn btn-default"
                  = link_to 'Delete', [:admin, box], :method => :delete, :class => "btn btn-danger", data: { confirm: t(:are_you_sure) }
