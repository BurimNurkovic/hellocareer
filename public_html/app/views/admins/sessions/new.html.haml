.admin--form-login
  .admin--form-header
    .grid-col-12.grid-col--left
      %h3 Log in

  .admin--form-body
    .grid-col-8.grid-col--left.form-email
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.email_field :email, :placeholder => "Email", autofocus: true, :class => "form-control", autocomplete: "off"
        = f.password_field :password, :placeholder => "Password", autofocus: true, :class => "form-control", autocomplete: "off"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        = f.submit "Log in", :class => "form-button"
    .grid-col-12.grid-col--left.form-link
      = render "admins/shared/links"
